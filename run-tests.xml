<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="PTL-HRM-Tests"  >

    <test name="parallel-tests" thread-count="2" parallel="methods"  enabled="false">

        <classes>
            <class name="com.pragmatic.testng.TestNGExample11"></class>
            <class name="com.pragmatic.testng.TestNGExample12InvocationCount"></class>

        </classes>

    </test>
    
    <test name="test1" enabled="false">
        <classes>
            <class name="com.pragmatic.testng.TestNGExample1"></class>
            <class name="com.pragmatic.testng.TestNGExample2"></class>
            <class name="com.pragmatic.testng.TestNGExample4"></class>

        </classes>
        
        
    </test>

    <test name="test2" enabled="false">
        <groups>
            <run>
                <include name="smoke"/>
<!--                <exclude name="smoke"></exclude>-->
            </run>
        </groups>

        <packages>
            <package name="com.pragmatic.testng"></package>
        </packages>

    </test>


    <test name="test-method" enabled="false">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.pragmatic.testng.TestBase"></class>
            <class name="com.pragmatic.testng.TestNGExample7">
                <methods>
                    <exclude name="testMethod5"></exclude>
                </methods>
            </class>
        </classes>

    </test>


    <test name="test-inherited-before-methods">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        
        <classes>
            <class name="com.pragmatic.testng.TestNGExample18"></class>
        </classes>

    </test>

    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    
    
    
    
</suite>